<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <nav class="navbar navbar-inverse navbar-fixed-top collapse navbar-collapse" >
            
            <ul class="nav navbar-nav">
                <li>  @Html.ActionLink("Home","Index","Home",null, new {@class="navbar-brand"})</li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sort Data By<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Order Size","IndexBySize","Order")</li>
                        <li>@Html.ActionLink("Order Date","IndexByDate","Order")</li>
                    </ul>
                </li>
            </ul>

            <form method="GET" class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search Orders" name="searchOrder"></input>      
                </div>
                <button type="submit" class="btn btn-default btn-toolbar">
                    <span class="glyphicon-search"></span>
                    Search
                </button>      
            </form>
        </nav>
    </br>
         <div class="page-header">
  <h1>Music Store</h1>
</div>
    </div>


    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <p class="navbar-text"> Paul Kenny RAD 301 Assignment </p>
</nav>
</body>
</html>
