@model RAD302CA.Models.Trip

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Trip</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TripName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TripName)
            @Html.ValidationMessageFor(model => model.TripName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.StartDate,new{id = string.Format("startDate")})
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.EndDate,new{id = string.Format("endDate")})
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TripViable)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TripViable)
            @Html.ValidationMessageFor(model => model.TripViable)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TripComplete)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TripComplete)
            @Html.ValidationMessageFor(model => model.TripComplete)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#startDate').datepicker({ format: 'dd/mm/yyyy' }); //Initialise any date pickers
        $('#endDate').datepicker({ format: 'dd/mm/yyyy' });
    </script>
}
