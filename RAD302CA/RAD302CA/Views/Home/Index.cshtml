@model IEnumerable<RAD302CA.Models.Trip>

@{
    ViewBag.Title = "Index";
}

<h2>Trips</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TripName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripViable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripComplete)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TripName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripViable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripComplete)
        </td>
        <td>
    </tr>
}

</table>
